@page
@model Feedback.Web.Pages.Feedbacks.CreateModel

<div class="container">
    <h1>Criar Feedback</h1>
    <form method="post" class="form">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Feedback.IdFeedback" />
        <div class="form-group">
            <label asp-for="Feedback.NomeCliente"></label>
            <input asp-for="Feedback.NomeCliente" class="input" />
            <span asp-validation-for="Feedback.NomeCliente" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Feedback.EmailCliente"></label>
            <input asp-for="Feedback.EmailCliente" type="email" class="input" />
        </div>
        <div class="form-group">
            <label asp-for="Feedback.DataFeedback"></label>
            <input asp-for="Feedback.DataFeedback" type="date" class="input" />
            <span asp-validation-for="Feedback.DataFeedback" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Feedback.Comentario"></label>
            <textarea asp-for="Feedback.Comentario" class="input"></textarea>
            <span asp-validation-for="Feedback.Comentario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Feedback.Avaliacao"></label>
            <input asp-for="Feedback.Avaliacao" type="number" class="input" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn-primary" value="Salvar" />
            <a asp-page="/Events/Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
